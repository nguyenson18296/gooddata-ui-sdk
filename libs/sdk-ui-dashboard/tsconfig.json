{
    "_note": "This file is only for IDE. For build use tsconfig.[dev/build].json (dev mode is less strict)",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "target": "es5",
        "jsx": "react",
        "lib": ["es7", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "..",
        "paths": {
            "@gooddata/sdk-model": ["sdk-model/src"],
            "@gooddata/sdk-backend-spi": ["sdk-backend-spi/src"],
            "@gooddata/sdk-ui": ["sdk-ui/src"],
            "@gooddata/sdk-ui-ext": ["sdk-ui-ext/src"],
            "@gooddata/sdk-ui-filters": ["sdk-ui-filters/src"],
            "@gooddata/sdk-ui-kit": ["sdk-ui-kit/src"]
        }
    },
    "compileOnSave": false,
    "exclude": ["**/node_modules", "dist", "esm", "**/__mocks__/**/*"]
}
